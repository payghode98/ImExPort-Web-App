

@{
	Layout = "~/Views/Shared/_LayoutTemplateManager.cshtml";
}


<div class="content-wrapper">
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title">Add New Department</h1>
					<form class="form-sample" action="DepartmentNewSubmit" method="post" enctype="multipart/form-data">

						<div class="form-group row">
							<label  class="col-sm-3 col-form-label">Department Name</label>
							<div class="col-sm-9">
								<input type="text" class="form-control"  required placeholder="Enter Department Name" name="DeptName"/>
							</div>
						</div>
						<button type="submit" class="btn btn-success mr-2">Submit</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>


