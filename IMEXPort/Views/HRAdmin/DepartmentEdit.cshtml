
@{
	Layout = "~/Views/Shared/_LayoutTemplateAdmin.cshtml";
}


<div class="content-wrapper">
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h1 class="card-title">Edit Deparment</h1>
					<form class="form-sample" action="DepartmentEditSubmit" method="post" enctype="multipart/form-data">

						<div class="form-group row">
							<label class="col-sm-3 col-form-label">Department Name</label>
							<div class="col-sm-9">
								<input type="text" class="form-control"  required placeholder="Enter Department Name" name="DeptName" value=@Model.DeptName>
							</div>
						</div>

						<div class="form-group row">

							<div class="col-sm-12">
								<input type="hidden" name="DepartmentID" value=@Model.DepartmentID />
								<button type="submit" class="btn btn-success mr-2">Update</button>
							</div>
						</div>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>
